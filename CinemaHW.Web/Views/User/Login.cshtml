@using CinemaHW.Persistence
@model LoginViewModel
@{
    ViewData["Title"] = "Bejelentkezés";
}
<h2>Login</h2>
<div class="row">
    <div class="container" style="width: 75%; font-size:20px; color:black;">
        <form class="container" style="width: 75%;" asp-controller="User" asp-action="Login"  asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
            <div class="form-group text-left">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-success" type="submit">Bejelentkezés</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}