@using CinemaHW.Persistence
@model RegisterViewModel
@{
    ViewData["Title"] = "Regisztráció";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="container" style="width: 75%; font-size:20px; color:black;">
        <form class="container" style="width: 75%;" asp-controller="User" asp-action="Register" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
            
            <div class="form-group text-left">
                <label class="text-left" asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="PasswordRepeat"></label>
                <input asp-for="PasswordRepeat" class="form-control" />
                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="UserFullName"></label>
                <input asp-for="UserFullName" class="form-control" />
                <span asp-validation-for="UserFullName" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="UserPhoneNumber"></label>
                <input asp-for="UserPhoneNumber" class="form-control" />
                <span asp-validation-for="UserPhoneNumber" class="text-danger"></span>
            </div>
            <button class="btn btn-success" type="submit">Regisztráció</button>
        </form>
    </div>
</div>

@section Scripts
{
    @* jQuery Validation használata a kliens oldali validációra *@
    <partial name="_ValidationScriptsPartial" />
}
